{
  "name": "dynamowaves",
  "version": "2.1.1",
  "type": "module",
  "description": "Lightweight, dependency-free SVG wave templates that dynamically generate themselves on render.",
  "main": "dist/dynamowaves.js",
  "module": "dist/dynamowaves.js",
  "types": "dist/dynamowaves.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "node --test",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "release": "npm publish",
    "release:dry": "npm run build && npm pack --dry-run",
    "docs:manifest": "mark-down build www/snippets --output www/snippets/snippets-index.json",
    "docs:manifest:watch": "mark-down watch www/snippets --output www/snippets/snippets-index.json",
    "docs:build": "npm run docs:manifest && mark-down compile-page www-src/index.html --manifest www/snippets/snippets-index.json --outDir www",
    "docs:watch": "chokidar \"www-src/index.html\" \"www/snippets/**/*.md\" -c \"npm run docs:build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzebley/dynamowaves.git"
  },
  "keywords": [
    "javascript",
    "svg",
    "html",
    "waves",
    "wave",
    "generative",
    "templates-html"
  ],
  "author": "Mark Zebley",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mzebley/dynamowaves/issues"
  },
  "homepage": "https://dynamowaves.markzebley.com/",
  "devDependencies": {
    "@mzebley/mark-down-cli": "^1.2.2",
    "@rollup/plugin-terser": "^0.4.4",
    "chokidar-cli": "^3.0.0",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^6.1.1"
  }
}